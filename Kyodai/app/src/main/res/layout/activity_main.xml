<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/kyodai"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/kyoday"
    tools:context="com.example.pc.kyodai.MainActivity">

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:id="@+id/btnplay"
        android:background="@drawable/btnplay"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/btnplay"
        android:onClick="onClick"/>
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:id="@+id/btnscore"
        android:background="@drawable/btnscore"
        android:layout_below="@+id/btnplay"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        />
    <ImageButton
        android:layout_width="134dp"
        android:layout_height="47dp"
        android:id="@+id/btnabout"
        android:background="@drawable/btnabout"
        android:layout_below="@+id/btnscore"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
       />
</RelativeLayout>
